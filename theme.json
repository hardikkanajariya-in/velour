{
  "colors": {
    "primary": "#1A1A1A",
    "accent": "#C4A882",
    "brand": "#8B1A1A",
    "surface": "#FAFAF8",
    "muted": "#F2EDE8",
    "white": "#FFFFFF",
    "black": "#000000",
    "neutral": {
      "50": "#FAFAFA",
      "100": "#F5F5F5",
      "200": "#E5E5E5",
      "300": "#D4D4D4",
      "400": "#A3A3A3",
      "500": "#6B6B6B",
      "600": "#525252",
      "700": "#404040",
      "800": "#262626",
      "900": "#1A1A1A",
      "950": "#0A0A0A"
    },
    "success": "#16A34A",
    "warning": "#F59E0B",
    "error": "#DC2626",
    "info": "#2563EB"
  },
  "typography": {
    "fontSizes": {
      "xs": {
        "size": "0.75rem",
        "lineHeight": "1rem",
        "letterSpacing": "0.01em"
      },
      "sm": {
        "size": "0.875rem",
        "lineHeight": "1.25rem",
        "letterSpacing": "0"
      },
      "base": { "size": "1rem", "lineHeight": "1.5rem", "letterSpacing": "0" },
      "lg": {
        "size": "1.125rem",
        "lineHeight": "1.75rem",
        "letterSpacing": "-0.01em"
      },
      "xl": {
        "size": "1.25rem",
        "lineHeight": "1.75rem",
        "letterSpacing": "-0.01em"
      },
      "2xl": {
        "size": "1.5rem",
        "lineHeight": "2rem",
        "letterSpacing": "-0.02em"
      },
      "3xl": {
        "size": "1.875rem",
        "lineHeight": "2.25rem",
        "letterSpacing": "-0.02em"
      },
      "4xl": {
        "size": "2.25rem",
        "lineHeight": "2.5rem",
        "letterSpacing": "-0.03em"
      },
      "5xl": {
        "size": "3rem",
        "lineHeight": "1.1",
        "letterSpacing": "-0.03em"
      },
      "6xl": {
        "size": "3.75rem",
        "lineHeight": "1.1",
        "letterSpacing": "-0.04em"
      }
    }
  },
  "spacing": {
    "section": { "x": "1.5rem", "y": "4rem", "xLg": "2rem", "yLg": "6rem" },
    "container": { "max": "1280px", "padding": "1rem", "paddingLg": "2rem" },
    "card": { "padding": "1.5rem", "gap": "1rem" },
    "gap": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem"
    }
  },
  "radius": {
    "sm": "0.25rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "full": "9999px",
    "card": "0.75rem",
    "button": "0.5rem",
    "input": "0.5rem"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.07), 0 2px 4px -2px rgba(0, 0, 0, 0.05)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.08), 0 4px 6px -4px rgba(0, 0, 0, 0.04)",
    "card": "0 1px 3px 0 rgba(0, 0, 0, 0.06), 0 1px 2px -1px rgba(0, 0, 0, 0.04)",
    "button": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "dropdown": "0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.06)"
  },
  "animation": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "inOut": "cubic-bezier(0.4, 0, 0.2, 1)",
      "bounce": "cubic-bezier(0.34, 1.56, 0.64, 1)"
    }
  }
}
